<div class="content-container signup-content-container">
  <%= form_for :user, :url => { :action => 'create' }, :html=>{:class=>"user-form"} do |form| %>
    <p>
      <%= form.label :fname %><br>
      <%= form.text_field :name %>
    </p>
    <p>
      <%= form.label :lname %><br>
      <%= form.password_field :last_name %>
    </p>
    <p>
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </p>
    <p>
      <%= form.label 'password' %><br>
      <%= form.text_field :password %>
    </p>
    <p>
      <%= form.label 'age' %><br>
      <%= form.text_field :age %>
    </p>
    <p>
      <%= form.label 'user_role' %><br>
      <%= form.text_field :role %>
    </p>
    <p>
      <%= form.submit 'Sign up' %>
    </p>
  <% end %>
</div>