<div class="content-container default-content-container">
  <%= form_for :mail, :url => { :action => 'create' }, :html=>{:class=>"user-form"} do |form| %>
    <p>
      <%= form.label :from %><br>
      <%= form.text_field :from %>
    </p>

    <p>
      <%= form.label :to %><br>
      <%= form.text_field :to %>
    </p>

    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :message %><br>
      <%= form.text_field :message %>
    </p>

    <p>
      <%= form.submit 'Add' %>
    </p>
  <% end %>
</div>